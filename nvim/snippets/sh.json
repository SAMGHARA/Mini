{
    "sh": {
        "prefix": "sh",
        "body": "#!/bin/${1}\n\n${2}"
    },
    "if": {
        "prefix": "if",
        "body": [
            "if ${1:condition}; then",
            "\t${2}",
            "fi"
        ]
    },
    "elseif": {
        "prefix": "elseif",
        "body": [
            "elif ${1:condition}; then",
            "\t${2}"
        ]
    },
    "function": {
        "prefix": "function",
        "body": [
            "function ${1:name}() {",
            "\t${2}",
            "}"
        ]
    }
}
