{
    "suggest.noselect": true,
    "inlayHint.display": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.signPriority": 1,
    "coc.source.file.ignoreHidden": false,
    "snippets.ultisnips.pythonPrompt": false,
    "snippets.snipmate.enable": false,
    "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
    "snippets.extends": {
        "cpp": ["c"],
        "zsh": ["sh"]
    },
    "coc.preferences.formatOnSave": true,
    "[lua][json][cpp]": {
        "coc.preferences.formatOnSave": false
    },

    "sumneko-lua.locale": "zh-cn",
    "Lua.telemetry.enable": true,
    "Lua.hint.enable": false,
    "Lua.hint.arrayIndex": "Disable",

    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.6/clangd_15.0.6/bin/clangd",

    "markdownlint.config": {
        "MD013": false
    },
    "markdown-preview-enhanced.imageFolderPath": "/images"
}
